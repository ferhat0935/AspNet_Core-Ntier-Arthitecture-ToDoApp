@model WorkUpdateDto
<html>

<head>
    <title>Todo App</title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>

    <div class="container my-2">
        <form asp-action="Update" asp-controller="Home" method="post">
            <input type="hidden"  asp-for="@Model.Id"/>
            <div class="mb-3">
                <label>İşin Tanımı : </label>
                <input asp-for="Definition" class="form-control" />
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsCompleted" id="defaultCheck1">
                <label class="form-check-label" for="defaultCheck1">
                    Tamamlandı
                </label>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
            <div asp-validation-summary="All" class="text-danger">
            </div>
        </form>
    </div>
</body>

</html>